<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Regular">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.Regular.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Regular.18.PrimaryColor">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Regular.18.SecondaryColor">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Regular.18.AccentColor">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="TextAppearance.Italic">
        <item name="android:fontFamily">@font/open_sans_italic</item>
    </style>

    <style name="TextAppearance.Italic.18">
        <item name="android:textSize">18sp</item>
    </style>

</resources>